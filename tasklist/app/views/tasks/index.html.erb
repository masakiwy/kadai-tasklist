<h1>All Tasks</h1>
<table border="1" cellspacing="0" style= "border-color:darkslategray; border-style:solid; border-width:3px;">
  <thead>
    <tr>
      <th>ID</th>
      <th>Task</th>
      <th>Status</th>
      <th>Update Time</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |i| %>
    <tr>
      <td><%= link_to i.id, i %></td>
      <td><%= i.content %></td>
      <td><%= i.status%></td>
      <td><%= i.updated_at %></td>
      <% end %>    
    </tr>
  </tbody>
</table><br>
<%= link_to "New Task Registration", new_task_path %>